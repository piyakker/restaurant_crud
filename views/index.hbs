<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurants/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="d-flex flex-column flex-sm-row align-items-sm-center gap-2">
          <div class="input-group mb-2 mb-sm-0 mr-sm-2">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
          <div class="input-group">
            <select class="form-select" id="sort" name="sort">
              <option value="name" {{#ifCond sort "name"}}Selected{{/ifCond}}>A > Z</option>
              <option value="-name" {{#ifCond sort "-name"}}Selected{{/ifCond}}>Z > A</option>
              <option value="category" {{#ifCond sort "category"}}Selected{{/ifCond}}>類別</option>
              <option value="location" {{#ifCond sort "location"}}Selected{{/ifCond}}>地區</option>
            </select>
          </div>
        </div>
      </form>
    </div>
  </div>

  <!-- restaurant list -->
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">

        {{#if restaurants}}
        <div class="row row-cols-sm-3">
          {{#each restaurants}}
          <div class="text-secondary restaurant">
            <div class="card mb-3">
              <a href="/restaurants/{{this._id}}">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              </a>
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>
                <span class="badge rounded-pill text-bg-danger">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </div>
            <div class="mb-3 text-end">
              <a href="/restaurants/{{this._id}}" role='button' class="btn btn-success">detail</a>
              <a href="/restaurants/{{this._id}}/edit" class="mx-3 btn btn-warning" role='button'>edit</a>
              <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger"onclick="return confirm('確定要刪除嗎?');">delete</button>
              </form>
            </div>
          </div>
          {{/each}}
        </div>
        {{else}}
        <h1>找不到...吃點別的好嗎?</h1>
        {{/if}}
      </div>
    </div>
  </div>